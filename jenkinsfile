pipeline {
    agent none
    stages {
        stage('Print environment variables') {
            agent { label 'master' }
            steps {
               sh "printenv | sort"
            }
        }
        stage('Find docker') {
            agent { label 'master' }
            steps {
               sh "which docker"
            }
        }
        stage('Integration Tests') {
            steps {
            withCredentials(string(credentialsId: 'c9f83db9-99b6-4fb1-ad98-8c572784ada1', variable: 'ROLE_ID')) {
                sh '''
                    set +x
                    export VAULT_ADDR=http://127.0.0.1:8200
                    export VAULT_SKIP_VERIFY=true
                    export SECRET_ID=$(vault write -field=secret_id -f auth/approle/role/local-jenkins-app/secret-id)
                    export VAULT_TOKEN=$(vault write -field=token auth/approle/login role_id=${ROLE_ID} secret_id=${SECRET_ID})
                    export VALUE=$(vault kv get -field=key secret/my-secret)
                    echo $VALUE
                '''
                }
            }
        }
        stage('Example Build') {
            agent { docker 'maven:3-alpine' } 
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('Example Test') {
            agent { docker 'openjdk:8-jre' } 
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}