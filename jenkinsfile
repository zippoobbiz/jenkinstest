pipeline {
    agent none
    stages {
        stage('Example') {
            if (env.BRANCH_NAME == 'master') {
                echo 'I only execute on the master branch'
            } else {
                echo 'I execute elsewhere'
            }
        }
        stage('Print environment variables') {
            agent { label 'master' }
            steps {
               sh "printenv | sort"
            }
        }
        stage('Find docker') {
            agent { label 'master' }
            steps {
               sh "which docker"
            }
        }
        stage('Example Build') {
            agent { docker 'maven:3-alpine' } 
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('Example Test') {
            agent { docker 'openjdk:8-jre' } 
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}